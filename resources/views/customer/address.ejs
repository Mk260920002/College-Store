
       <h1 class="font-serif font-bold text-2xl text-center text-amber-500 p-4">Enter your address</h1>
    <div class="w-full md:w-96 md:max-w-full mx-auto p-4 font-serif">
        <div class="p-6 border border-gray-300 sm:rounded-md">
         <% if(messages.error){ %> 
          <h4 class="text-center text-red-600 font-bold text-red-500 my-2 text-sm">
            <%= messages.error %>
          </h4>
          <% } %> 
          <form
            action="/customer/order"
            method="POST"
          
                                          >
            <label class="block mb-6">
              <span class="text-gray-700">Your name</span>
              <input
                name="name"
                type="text"
                class="
                  block
                  w-full
                  mt-1
                  border-gray-300
                  rounded-md
                  shadow-sm
                  focus:border-indigo-300
                  focus:ring
                  focus:ring-indigo-200
                  focus:ring-opacity-50" 
                  placeholder="Enter your name"
              />
            </label>
            <label class="block mb-6">
              <span class="text-gray-700">Address</span>
              <input
                name="address"
                type="text"
                class="
                  block
                  w-full
                  mt-1
                  border-gray-300
                  rounded-md
                  shadow-sm
                  focus:border-indigo-300
                  focus:ring
                  focus:ring-indigo-200
                  focus:ring-opacity-50
                "
                placeholder="Enter your Adress"
              />
            </label>
            <label class="block mb-6">
              <span class="text-gray-700">Phone No</span>
              <input
                name="phone"
                type="text"
                class="
                  block
                  w-full
                  mt-1
                  border-gray-300
                  rounded-md
                  shadow-sm
                  focus:border-indigo-300
                  focus:ring
                  focus:ring-indigo-200
                  focus:ring-opacity-50
                "
                placeholder="Enter your phone"
              />
            </label>
           
                     
            <div class="mb-6 text-center">
              <button
                type="submit"
                class="
                  h-10
                  px-5
                  text-indigo-100
                  bg-indigo-700
                  rounded-lg
                  transition-colors
                  duration-150
                  focus:shadow-outline
                  hover:bg-indigo-800
                "
              >
                proceed
              </button>
            </div>
            
          </form>
        </div>
      </div>
      

